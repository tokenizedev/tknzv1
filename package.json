{
  "name": "tokenize",
  "private": true,
  "type": "module",
  "version": "0.11.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:crx": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "postbuild": "./scripts/link-build-to-source.sh",
    "preview": "vite preview",
    "bump": "commit-and-tag-version",
    "keygen": "scripts/gen-extension-pem.sh",
    "package": "node pack.js",
    "release": "yarn bump && yarn build && yarn package",
    "test": "node ./node_modules/vitest/vitest.mjs run",
    "test:watch": "node ./node_modules/vitest/vitest.mjs",
    "test:ci": "node ./node_modules/vitest/vitest.mjs run",
    "test:coverage": "node ./node_modules/vitest/vitest.mjs run --coverage",
    "watch:build": "nodemon --watch src/**/** --ext ts,tsx,js,jsx --exec \"yarn build\" --delay 500"
  },
  "dependencies": {
    "@solana/spl-token": "^0.4.13",
    "@solana/web3.js": "^1.91.1",
    "@types/uuid": "^10.0.0",
    "axios": "^1.9.0",
    "bip39": "^3.1.0",
    "bs58": "^5.0.0",
    "buffer": "6.0.3",
    "compare-versions": "^6.1.1",
    "firebase": "^11.3.1",
    "html2canvas": "^1.4.1",
    "lucide-react": "^0.344.0",
    "qrcode.react": "^3.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "react-jdenticon": "^1.4.0",
    "rxdb": "^16.12.0",
    "rxjs": "^7.8.2",
    "uuid": "^11.1.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.23",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/chrome": "^0.0.263",
    "@types/html2canvas": "^1.0.0",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^3.1.2",
    "adm-zip": "^0.5.16",
    "autoprefixer": "^10.4.18",
    "commit-and-tag-version": "^12.5.0",
    "msw": "^1.3.2",
    "nodemon": "^2.0.22",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.5",
    "vitest": "^0.34.3",
    "vitest-fetch-mock": "^0.4.5"
  },
  "commit-and-tag-version": {
    "bumpFiles": [
      {
        "filename": "package.json",
        "type": "json"
      },
      {
        "filename": "manifest.json",
        "type": "json"
      }
    ]
  }
}
